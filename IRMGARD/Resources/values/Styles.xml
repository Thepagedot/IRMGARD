<?xml version="1.0" encoding="UTF-8" ?>
<resources>
    <!-- Base theme applied no matter what API -->
    <style name="IrmgardTheme.Base" parent="Theme.AppCompat.Light.NoActionBar">
        <!--If you are using revision 22.1 please use just windowNoTitle. Without android:-->
        <item name="windowNoTitle">true</item>
        <!--We will be using the toolbar so no need to show ActionBar-->
        <item name="windowActionBar">false</item>
        <!-- Set theme colors from http://www.google.com/design/spec/style/color.html#color-color-palette-->
        <!-- colorPrimary is used for the default action bar background -->
        <item name="colorPrimary">@android:color/transparent</item>
        <!-- colorPrimaryDark is used for the status bar -->
        <item name="colorPrimaryDark">@color/irmgard_init_dark</item>
        <!-- colorAccent is used as the default value for colorControlActivated
             which is used to tint widgets -->
        <item name="colorAccent">@color/irmgard_red</item>
         <!-- You can also set colorControlNormal, colorControlActivated
             colorControlHighlight and colorSwitchThumbNormal. -->
        <item name="android:colorBackground">@android:color/white</item>
    </style>

    <style name="IrmgardTheme" parent="IrmgardTheme.Base">
    </style>

    <style name="ToolBarInitStyle">
        <item name="android:textColorPrimary">@android:color/black</item>
        <item name="android:textColorSecondary">@android:color/black</item>
    </style>

    <style name="Level1Colors">
        <item name="colorPrimary">@color/irmgard_level1</item>
        <item name="colorPrimaryDark">@color/irmgard_level1_dark</item>
        <item name="colorAccent">@color/irmgard_red</item>
    </style>

    <style name="result_zone">
        <item name="android:layout_margin">@dimen/margin_default</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="slider_background">
        <item name="android:layout_margin">@dimen/margin_default</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">10dp</item>
        <item name="android:background">@drawable/slider_background</item>
    </style>
</resources>