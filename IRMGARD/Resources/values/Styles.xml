<?xml version="1.0" encoding="UTF-8" ?>
<resources>
    <!-- Base theme applied no matter what API -->
    <style name="IrmgardTheme.Base" parent="Theme.AppCompat.Light.NoActionBar">
        <!--If you are using revision 22.1 please use just windowNoTitle. Without android:-->
        <item name="windowNoTitle">true</item>
        <!--We will be using the toolbar so no need to show ActionBar-->
        <item name="windowActionBar">false</item>
        <!-- Set theme colors from http://www.google.com/design/spec/style/color.html#color-color-palette-->
        <!-- colorPrimary is used for the default action bar background -->
        <item name="colorPrimary">@color/app_bar</item>
        <!-- colorPrimaryDark is used for the status bar -->
        <item name="colorPrimaryDark">@color/status_bar</item>
        <!-- colorAccent is used as the default value for colorControlActivated
             which is used to tint widgets -->
        <item name="colorAccent">@color/irmgard_red</item>
         <!-- You can also set colorControlNormal, colorControlActivated
             colorControlHighlight and colorSwitchThumbNormal. -->
        <item name="android:textColorPrimary">@android:color/black</item>
        <item name="android:textColorSecondary">@android:color/black</item>
        <item name="android:colorBackground">@color/background</item>
        <item name="android:typeface">monospace</item>
    </style>

    <style name="ToolbarTitle">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:typeface">monospace</item>
        <item name="android:textSize">20dp</item>
    </style>

    <style name="IrmgardTheme" parent="IrmgardTheme.Base">
    </style>

    <style name="Level1Colors">
        <item name="colorAccent">@color/level1</item>
    </style>
    <style name="Level2Colors">
        <item name="colorAccent">@color/level2</item>
    </style>
    <style name="Level3Colors">
        <item name="colorAccent">@color/level3</item>
    </style>
    <style name="Level4Colors">
        <item name="colorAccent">@color/level4</item>
    </style>
    <style name="Level5Colors">
        <item name="colorAccent">@color/level5</item>
    </style>
    <style name="Level6Colors">
        <item name="colorAccent">@color/level6</item>
    </style>
    <style name="Level7Colors">
        <item name="colorAccent">@color/level7</item>
    </style>
    <style name="Level8Colors">
        <item name="colorAccent">@color/level8</item>
    </style>
    <style name="Level9Colors">
        <item name="colorAccent">@color/level9</item>
    </style>

    <style name="result_zone">
        <item name="android:layout_margin">@dimen/margin_default</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="slider_background">
        <item name="android:layout_margin">@dimen/margin_default</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">10dp</item>
        <item name="android:background">@drawable/slider_background</item>
    </style>
</resources>